<?xml version="1.0"?>
<launch>
    <!-- 静态坐标系变换：将openni_rgb_optical_frame链接到base_link -->
    <node pkg="tf2_ros" type="static_transform_publisher" name="camera_to_base"
          args="0 0 0 0 0 0 base_link openni_rgb_optical_frame" />
    
    <!-- 静态坐标系变换：将base_link链接到map -->
    <node pkg="tf2_ros" type="static_transform_publisher" name="base_to_map"
          args="0 0 0 0 0 0 map base_link" />

    <!-- 启动supervoxel节点 -->
    <node name="supervoxel_node" pkg="super_voxel" type="supervoxel_node" output="screen">
        <rosparam file="$(find super_voxel)/config/supervoxel.yaml" command="load" />
    </node>

    <!-- 启动RViz -->
    <node name="rviz" pkg="rviz" type="rviz" args="-d $(find super_voxel)/config/supervoxel.rviz" required="false"/>

</launch>
