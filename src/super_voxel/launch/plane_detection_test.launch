<?xml version="1.0"?>
<launch>
    <!-- 加载参数配置 -->
    <rosparam file="$(find super_voxel)/config/plane_detection_params.yaml" command="load" />
    
    <!-- 启动测试节点 -->
    <node name="supervoxel_plane_test" pkg="super_voxel" type="test_library" output="screen">
       
    </node>
    
    <!-- 启动rviz进行可视化 -->
    <node name="rviz" pkg="rviz" type="rviz" args="-d $(find super_voxel)/config/plane_detection_visualization.rviz" output="screen" required="false" />
    
    <!-- 输出提示信息 -->
    <param name="launch_info" value="PlaneDetect + Supervoxel Test Node Started! 
    Topics:
    - Input: /camera/depth_registered/points (PointCloud2)  
    - Output: /test_supervoxel_cloud (PointCloud2) - 超体素分割结果
    - Output: /test_convex_hulls (Marker) - 凸包可视化
    - Output: /test_detected_planes (MarkerArray) - 平面可视化
    
    Processing Pipeline:
    1. PlaneDetect: 检测并移除平面
    2. Supervoxel: 对剩余点云进行超体素分割
    3. Visualization: 同时显示平面和凸包" />
</launch>
